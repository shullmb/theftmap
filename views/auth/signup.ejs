<div class="auth-form valign-wrapper">
    <div class="row">
        <div class="col s6 offset-s3">
            <h3>Sign up</h3>
            <form action="/users" method="POST">
                <input type="text" name="name">
                <label for="name">Name</label>
                <input type="text" name="email">
                <label for="email">Email</label>
                <input type="password" name="password">
                <label for="password">Password</label>
                <input type="password" name="confirmPassword">
                <label for="confirmPassword">Confirm Password</label><br><br>
                <div class="row center-align">
                    <div class="col s12">
                        <button type="submit" class="col s10 offset-s1 waves-effect waves-light blue-grey darken-3 btn-large">Continue</button>
                    </div>
                </div>
                </form>
        </div>
    </div>
</div>