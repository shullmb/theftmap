<div class="row">
    <div class="col s12">
        <h3>Create a new map</h3>
    </div>
    <div class="col s12 m12 l8">
        <form action="">
        <input type="text" name="location" id="location" placeholder="Enter Zipcode or Address">
        <button id="searchArea" class="btn blue-grey">Recenter map</button>
        </form>
    </div>
</div>
<div class="row">
    <div class="col s12 m12 l8">
        <div id="map">
            <!-- render map -->
        </div>
    </div>
</div>
<div class="row">
    <div class="col s12 m12 l8">
        <form action="/maps" method="POST">
            <div class="row">
                <div class="col s12 m6">
                <label for="radius">Search Radius</label>
                    <input type="number" id="searchRadius" name="searchRadius" min="5" max="250" default="10" step="5">
                </div>
                <div class="col s12 m6 valign-wrapper">
                    <button type="submit" class="col s12 btn btn-large blue-grey">Find Theft Locations</button>
                </div>
            </div>
        </form>
    </div>
</div>

<script> var center = {lat: 47.8, lng:-122.4} </script>
<script src="/js/mapsearch.js"></script>
<script async defer src="https://maps.googleapis.com/maps/api/js?key=<%=key%>&region=021&callback=initMap"></script>